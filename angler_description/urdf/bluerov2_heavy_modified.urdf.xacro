    </joint>

    <joint name="${prefix}thruster5_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster5" />
      <axis xyz="0 0 -1" />
      <origin rpy="0 0 0" xyz="0.118 -0.215 0.064" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}thruster6_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster6" />
      <axis xyz="0 0 -1" />
      <origin rpy="0 0 0" xyz="0.118 0.215 0.064" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}thruster7_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster7" />
      <axis xyz="0 0 -1" />
      <origin rpy="0 0 0" xyz="-0.118 -0.215 0.064" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}thruster8_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster8" />
      <axis xyz="0 0 -1" />
      <origin rpy="0 0 0" xyz="-0.118 0.215 0.064" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}manipulator_mount_joint" type="fixed">
      <!-- The Alpha is mounted upside-down -->
      <origin rpy="0 0 0" xyz="0.24 -0.099 0.029" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}manipulator_mount_link" />
    </joint>

    <!-- Import Alpha macro -->
    <xacro:include filename="$(find angler_description)/urdf/alpha.urdf.xacro" />

    <xacro:alpha_urdf parent="${prefix}manipulator_mount_link" prefix="${prefix}alpha_">
      <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:alpha_urdf>

  </xacro:macro>

</robot>
