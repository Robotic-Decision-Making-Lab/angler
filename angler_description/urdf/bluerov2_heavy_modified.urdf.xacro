          <mesh filename="package://angler_description/meshes/t200_ccw_prop.dae" />
        </geometry>
        <origin rpy="-1.571 0 0" xyz="0 0 0" />
      </visual>
    </link>

    <link name="${prefix}thruster3">
      <inertial>
        <mass value="0.002" />
        <inertia
          ixx="0.001"
