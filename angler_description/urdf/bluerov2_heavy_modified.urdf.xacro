        />
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://angler_description/meshes/t200_ccw_prop.dae" />
        </geometry>
        <origin rpy="-1.571 0 1.571" xyz="0 0 0" />
      </visual>
    </link>

    <link name="${prefix}thruster6">
      <inertial>
        <mass value="0.002" />
        <inertia
