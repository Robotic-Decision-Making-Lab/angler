        />
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://angler_description/meshes/t200_ccw_prop.dae" />
        </geometry>
        <origin rpy="-1.571 0 1.571" xyz="0 0 0" />
      </visual>
    </link>

    <link name="${prefix}manipulator_mount_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
          <box size="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <mass value="0.0001" />
        <inertia
          ixx="0.0001"
          ixy="0"
          ixz="0"
          iyy="0.0001"
          iyz="0"
          izz="0.0001"
        />
      </inertial>
    </link>

    <joint name="base_footprint_joint" type="fixed">
      <parent link="base_footprint" />
      <child link="base_link" />
    </joint>

    <joint name="${prefix}thruster1_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster1" />
      <axis xyz="0 0 -1" />
      <origin rpy="-1.571 1.571 -1.047" xyz="0.088 -0.102 -0.04" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}thruster2_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster2" />
      <axis xyz="0 0 -1" />
      <origin rpy="-1.571 1.571 -2.094" xyz="0.088 0.102 -0.04" />
      <limits effort="-1" velocity="-1" />
    </joint>

    <joint name="${prefix}thruster3_joint" type="continuous">
      <parent link="${prefix}base_link" />
      <child link="${prefix}thruster3" />
      <axis xyz="0 0 -1" />
      <origin rpy="-1.571 1.571 1.047" xyz="-0.088 -0.102 -0.04" />
