        />
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://angler_description/meshes/t200_cw_prop.dae" />
        </geometry>
        <origin rpy="1.571 0 0" xyz="0 0 0" />
      </visual>
    </link>

    <link name="${prefix}thruster4">
      <inertial>
        <mass value="0.002" />
        <inertia
          ixx="0.001"
          ixy="0"
          ixz="0"
          iyy="0.001"
          iyz="0"
          izz="0.001"
        />
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://angler_description/meshes/t200_cw_prop.dae" />
        </geometry>
        <origin rpy="1.571 0 0" xyz="0 0 0" />
      </visual>
    </link>

    <link name="${prefix}thruster5">
      <inertial>
        <mass value="0.002" />
        <inertia
          ixx="0.001"
          ixy="0"
          ixz="0"
          iyy="0.001"
          iyz="0"
