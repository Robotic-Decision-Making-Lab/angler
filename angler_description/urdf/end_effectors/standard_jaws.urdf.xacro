<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="alpha_standard_jaws"
    params="parent prefix axis_a *origin">

    <material name="${prefix}black">
      <color rgba="0.3 0.3 0.3 1" />
    </material>

    <link name="${prefix}base_link">
      <visual>
        <geometry>
          <mesh
            filename="file://$(find alpha_description)/meshes/end_effectors/RS1-124.stl" />
        </geometry>
        <material name="${prefix}black" />
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.00975" radius="0.020" />
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.004875" />
      </collision>
      <inertial>
        <mass value="0.023" />
        <origin xyz="0 0 0.004875" />
        <inertia
          ixx="0.000002422"
          ixy="0"
          ixz="0"
          iyy="0.000002422"
          iyz="0"
          izz="0.0000046"
        />
      </inertial>
    </link>

    <link name="${prefix}rs1_130_link">
      <visual>
        <geometry>
          <mesh
            filename="file://$(find alpha_description)/meshes/end_effectors/RS1-130.stl" />
        </geometry>
        <material name="${prefix}black" />
        <origin xyz="0 0 0" rpy="0 0 0" />
      </visual>
      <collision>
        <geometry>
          <box size="0.012 0.03 0.09" />
        </geometry>
        <origin xyz="0.0 -0.008 0.045" rpy="0 0 0" />
      </collision>
      <inertial>
        <mass value="0.055" />
        <origin xyz="0.0 -0.008 0.045" rpy="0 0 0" />
        <inertia
          ixx="0.00004125"
          ixy="0"
          ixz="0"
          iyy="0.000037785"
          iyz="0"
          izz="0.000004785"
        />
      </inertial>
    </link>

    <link name="${prefix}rs1_139_link">
      <visual>
        <geometry>
          <mesh
            filename="file://$(find alpha_description)/meshes/end_effectors/RS1-139.stl" />
        </geometry>
        <material name="${prefix}black" />
        <origin xyz="0 0 0" rpy="0 0 0" />
      </visual>
      <collision>
        <geometry>
          <box size="0.012 0.03 0.09" />
        </geometry>
        <origin xyz="0.0 0.008 0.045" rpy="0 0 0" />
      </collision>
      <inertial>
        <mass value="0.055" />
        <origin xyz="0.0 0.008 0.045" rpy="0 0 0" />
        <inertia
          ixx="0.00004125"
          ixy="0"
          ixz="0"
          iyy="0.000037785"
          iyz="0"
          izz="0.000004785"
        />
      </inertial>
    </link>

    <link name="${prefix}tool">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
          <box size="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <mass value="0.0001" />
        <inertia
          ixx="0.0001"
          ixy="0"
          ixz="0"
          iyy="0.0001"
          iyz="0"
          izz="0.0001"
        />
      </inertial>
    </link>

    <joint name="${prefix}base_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${prefix}base_link" />
      <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="${prefix}rs1_130_joint" type="revolute">
      <origin xyz="0 0.0155 0.0069" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}rs1_130_link" />
      <axis xyz="-1 0 0" />
      <limit lower="0" upper="0.5" effort="10" velocity="10" />
      <mimic joint="${axis_a}" multiplier="51" offset="0" />
    </joint>

    <joint name="${prefix}rs1_139_joint" type="revolute">
      <origin xyz="0 -0.0155 0.0069" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}rs1_139_link" />
      <axis xyz="1 0 0" />
      <limit lower="0" upper="0.5" effort="10" velocity="10" />
      <mimic joint="${prefix}rs1_130_joint" multiplier="1" offset="0" />
    </joint>

    <joint name="${prefix}tool_joint" type="fixed">
      <origin xyz="0 0 0.04" rpy="0 -1.571 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}tool" />
    </joint>

  </xacro:macro>

</robot>
